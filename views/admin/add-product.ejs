<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/styles.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main style="margin-top: 50px;">
                <div class="titles">
                    <h2>Add <span>New Product</span></h2>
                </div>
                <div class="form-container">
                    <form class="product-form" action="/admin/add-product" method="POST">

                        <div class="row">
                            <div class="col-lg-6 col-sm-10">
                                <label for="title">Title</label>
                                <input type="text" name="title" id="title">
                            </div>
                            <div class="col-lg-6 col-sm-2"></div>

                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-sm-10">
                                <label for="image">Image</label>
                                <input type="text" name="image" id="image">
                            </div>
                            <div class="col-lg-6 col-sm-2"></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-sm-10">
                                <label for="price">Price</label>
                                <input type="text" name="price" id="price">
                            </div>
                            <div class="col-lg-6 col-sm-2"></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-sm-10">
                                <label for="desc">Description</label>
                                <textarea name="desc" id="desc" rows="2"></textarea>
                            </div>
                            <div class="col-lg-6 col-sm-2"></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-sm-10">
                                <label for="info">Information</label>
                                <textarea name="info" id="info" rows="3"></textarea>
                            </div>
                            <div class="col-lg-6 col-sm-2"></div>
                        </div>
                        <div>
                            <div class="row">
                                <div class="col-lg-6 col-sm-10">
                                    <button class="primary-btn" type="submit">Add Product</button>
                                </div>
                                <div class="col-lg-6 col-sm-2"></div>
                            </div>


                        </div>




                    </form>
                </div>


            </main>

            <%- include('../includes/footer.ejs') %>
                <%- include('../includes/end.ejs') %>